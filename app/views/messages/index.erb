<% @messages.each do |message| %>
  <div class="message">
    <h3>
      <a href="/messages/<%= message.id %>"><%= message.content%></a> 
      <small>(by: <%= message.author %>)</small>
      <p><%= message.url %></p>
    </h3>
  </div>
<% end %>

<a href="/messages/new">Post a new message</a>